		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- dependency versions -->
		<com.google.gwt.version>2.7.0</com.google.gwt.version>
		<com.google.gwt.gin.version>2.1.2</com.google.gwt.gin.version>
