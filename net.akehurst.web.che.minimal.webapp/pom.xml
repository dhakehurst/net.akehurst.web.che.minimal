		<dependency>
			<groupId>org.eclipse.che.plugin</groupId>
			<artifactId>che-plugin-codemirror-editorwidget</artifactId>
			<version>${che.plugins.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.plugin</groupId>
			<artifactId>che-plugin-sdk-env-local</artifactId>
