		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
			<artifactId>che-core-client-gwt-user</artifactId>
			<version>${che.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
			<artifactId>che-core-client-gwt-vfs</artifactId>
