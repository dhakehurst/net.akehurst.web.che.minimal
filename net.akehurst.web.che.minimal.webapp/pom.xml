			<version>${che.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
			<artifactId>che-core-api-auth</artifactId>
			<version>${che.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
			<artifactId>che-core-api-builder</artifactId>
			<version>${che.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
			<artifactId>che-core-api-docs</artifactId>
			<version>${che.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.che.core</groupId>
